{% extends 'base-front.html.twig' %}

{% block title %}Popular Courses{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Your existing styles */
    </style>
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="main-wrapper">
        <section class="page-title bg-2">
            <!-- Existing content -->
        </section>
        <section class="section course">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8 text-center">
                        <div class="section-title">
                            <div class="divider mb-3"></div>
                            <h2>Popular Courses</h2>
                        </div>
                    </div>
                </div>
                <div class="row">
                    {% for plan in plans %}
                        <div class="col-lg-4 col-md-6">
                            <div class="card rounded-0 p-0">
                                <img src="{{ asset('images/' ~ plan.imageurl) }}" alt="{{ plan.nomP }}" class="img-fluid">
                                <div class="card-body">
                                    <a href="{{ path('plan_show', {'id': plan.id}) }}"><h4 class="mt-3 mb-0">{{ plan.nomP }}</h4></a>
                                    <p class="mb-2">{{ plan.descriptionP }}</p>
                                    <button class="like-button" data-plan-id="{{ plan.id }}" data-csrf-token="{{ csrf_token('like' ~ plan.id) }}">Like</button>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const likeButtons = document.querySelectorAll('.like-button');
            likeButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const planId = this.getAttribute('data-plan-id');
                    const csrfToken = this.getAttribute('data-csrf-token'); // Retrieve CSRF token
                    fetch('{{ path('plan_like', {'planId': 'ID'}) }}'.replace('ID', planId), {
                        method: 'POST',
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest',
                            'X-CSRF-Token': csrfToken, // Pass CSRF token in the request header
                            'Content-Type': 'application/json',
                        },
                        credentials: 'include'
                    }).then(response => response.json())
                        .then(data => {
                            if(data.success) {
                                console.log(data.message); // Output success message
                                this.textContent = 'Liked'; // Change button text
                                this.disabled = true; // Disable button
                            } else {
                                console.error(data.message); // Output error message
                            }
                        });
                });
            });
        });
    </script>

{% endblock %}
