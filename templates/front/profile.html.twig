{% extends 'base-back.html.twig' %}
{% block title %}Register{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
<<div class="position-absolute w-100 min-height-300 top-0" style="background-image: url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D'); background-position-y: 50%;">
    <span class="mask bg-primary opacity-6"></span>
</div>
    <div class="main-content position-relative max-height-vh-100 h-100">
        <div class="card shadow-lg mx-4 card-profile-bottom">
            <div class="card-body p-3">
                <div class="row gx-4">
                    <div class="col-auto">
                        <div class="avatar avatar-xl position-relative">
                            <img src="{{ asset('uploads/profile_images/' ~ user.profileImage) }}" alt="profile_image" class="w-100 border-radius-lg shadow-sm">                        </div>
                    </div>
                    <div class="col-auto my-auto">
                        <div class="h-100">
                            <h5 class="mb-1">
                                {{ user.name }}<span class="font-weight-light" style="font-size: 16px;">, {{ user.age }}</span> </h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid py-4">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <p class="text-uppercase text-sm">User Information</p>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Name</label>
                                        <input class="form-control" type="text" value="{{ user.name }}">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Email address</label>
                                        <input class="form-control" type="email" value="{{ user.email }}">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Age</label>
                                        <input class="form-control" type="number" value="{{ user.age }}">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Height</label>
                                        <input class="form-control" type="number" value="{{ user.height }}">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="example-text-input" class="form-control-label">Weight</label>
                                        <input class="form-control" type="number" value="{{ user.weight }}">
                                    </div>
                                </div>
                            </div>
                            <hr class="horizontal dark">
                            <p class="text-uppercase text-sm">Favorite Plans</p>
                            <div class="row">
                                {% for plan in user.likedPlans %}
                                    <div class="col-md-4">
                                        <div class="card plan-card">
                                            <img src="{{ asset('images/' ~ plan.imageurl) }}" alt="{{ plan.nomP }}">
                                            <div class="card-body">
                                                <h5 class="card-title">{{ plan.nomP }}</h5>
                                                <p class="card-text">{{ plan.descriptionP }}</p>
                                                <a href="{{ path('plan_show', {'id': plan.id}) }}" class="btn btn-primary">View Details</a>
                                            </div>
                                        </div>
                                    </div>
                                {% else %}
                                    <div class="col-12">
                                        <p>No favorite plans yet.</p>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--   Core JS Files   -->
    <script src="{{ asset('back-office/assets/js/core/popper.min.js') }}"></script>
    <script src="{{ asset('back-office/assets/js/core/bootstrap.min.js') }}"></script>
    <script src="{{ asset('back-office/assets/js/plugins/perfect-scrollbar.min.js') }}"></script>
    <script src="{{ asset('back-office/assets/js/plugins/smooth-scrollbar.min.js') }}"></script>
    <!-- Github buttons -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="{{ asset('back-office/assets/js/argon-dashboard.min.js?v=2.0.4') }}"></script>
{% endblock %}