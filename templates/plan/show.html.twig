{% extends 'base-back.html.twig' %}
{% block title %}New Exercice{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        input.form-control{
            border: none;
            border-bottom: 1px solid #ccc;
            box-shadow: none;
            border-radius: 0;
        }
    </style>
{% endblock %}
{% block body %}
    {{ parent() }}

   <div>
       <div class="card" style="width: 50rem; margin-left: 420px; margin-top: 100px">
           <div class="card-body">
               <h5 class="card-title">Show plan details</h5>
           <h6>{{ plan.getNomP }}</h6>
               <img src="{{ asset('images/' ~ plan.getImageurl) }}" width="500" height="300" style="margin-left: 120px">
               <br>
               <br>
               <p>{{ plan.getDescriptionP }}</p>
           <div class="table-responsive">
               <div class="table-wrapper">
                   <table class="table table-striped table-hover">
                       <tbody>
                       {% for exercice in plan.getExercices %}
                           <tr style="text-align: center">
                               <td style="text-align: left!important;">
                                   <a href="#">
                                       {% if exercice.getIMAGEURL %}
                                           <img src="{{ asset('uploads/' ~ exercice.getIMAGEURL) }}" class="avatar" alt="Exercise image">
                                       {% else %}
                                           <img src="/examples/images/avatar/1.jpg" class="avatar" alt="Default Avatar">
                                       {% endif %}
                                       {{ exercice.getNOM }}
                                   </a>
                               </td>
                           </tr>
                       {% endfor %}
                       </tbody>
                   </table>
               </div>
           </div>
       </div>

   </div>
{% endblock %}