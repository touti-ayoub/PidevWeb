{% extends 'base-back.html.twig' %}

{% block title %}Recipe
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block body %}
	{{ parent() }}
	<div class="card" style="width: 50rem; margin-left: 370px; margin-top: 100px">


		<div class="card-body">
			<h5 class="card-title">Recipe
			</h5>


			<table class="table">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ recipe.id }}</td>
					</tr>
					<tr>
						<th>Name</th>
						<td>{{ recipe.name }}</td>
					</tr>
					<tr>
						<th>TotalCalories</th>
						<td>{{ recipe.totalCalories }}</td>
					</tr>
					<tr>
						<th>TotalProtein</th>
						<td>{{ recipe.totalProtein }}</td>
					</tr>
					<tr>
						<th>TotalCarbs</th>
						<td>{{ recipe.totalCarbs }}</td>
					</tr>
					<tr>
						<th>TotalFat</th>
						<td>{{ recipe.totalFat }}</td>
					</tr>
				</tbody>
			</table>

			<a href="{{ path('app_recipe_index') }}">back to list</a>

			<a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">edit</a>

			{{ include('recipe/_delete_form.html.twig') }}
		{% endblock %}
