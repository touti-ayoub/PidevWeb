{% extends 'base-back.html.twig' %}

{% block title %}Recipe
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block body %}
	{{ parent() }}

	<div class="card" style="width: 50rem; margin-left: 370px; margin-top: 100px">
		<div class="card-body">
			<a href="{{ path('app_recipe_index') }}">
				<i class="fas fa-arrow-left"></i>
			</a>
			<h5 class="card-title text-center">Recipe</h5>

			<table class="table">
				<tbody>
					<tr>
						<td colspan="2"><img src="{{ asset('images/' ~ recipe.image) }}" alt="Image" style="max-width: 350px;"></td>
					</tr>

					<tr>
						<th>Name</th>
						<td>{{ recipe.name }}</td>
					</tr>
					<tr>
						<th>Total Calories</th>
						<td>{{ recipe.totalCalories }}</td>
					</tr>
					<tr>
						<th>Total Protein</th>
						<td>{{ recipe.totalProtein }}</td>
					</tr>
					<tr>
						<th>Total Carbs</th>
						<td>{{ recipe.totalCarbs }}</td>
					</tr>
					<tr>
						<th>Total Fat</th>
						<td>{{ recipe.totalFat }}</td>
					</tr>
				</tbody>
			</table>
			<a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}" class="btn btn-primary">
				<i class="fas fa-edit"></i>
				Edit
			</a>

			{{ include('recipe/_delete_form.html.twig') }}

		</div>
	</div>
{% endblock %}
