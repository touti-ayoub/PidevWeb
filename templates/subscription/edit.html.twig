{% extends 'base-back.html.twig' %}
{% block title %}Edit Subscription{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        input.form-control {
            border: none;
            border-bottom: 1px solid #ccc;
            box-shadow: none;
            border-radius: 0;
        }
    </style>
{% endblock %}
{% block body %}
    {{ parent() }}
    <style>
        .form-group {
            margin-bottom: 15px;
            width: 700px; /* Adjust as needed */
            height: 60px; /* Adjust as needed */
        }
    </style>

    <div class="card" style="width: 50rem; margin-left: 500px; margin-top: 100px">
        <div class="card-body" style="display: flex; flex-direction: column; align-items: center;">
            <h5 class="card-title">Edit Subscription</h5>
            <form method="post">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.type) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.type) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.price) }}
                    {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.price) }}
                </div>
                <div style="display: flex; justify-content: center; width: 100%;">
                    <a href="#" onclick="this.closest('form').submit()">
                        <img src="{{ asset('back-office/img/save.png') }}" alt="Update" style="width: 43px; height: 43px;">
                    </a>
                    <a href="{{ path('app_subscription_index') }}">
                        <img src="{{ asset('back-office/img/back.png') }}" alt="Back to list" style="margin-left: 15px; width: 40px; height: 40px;">
                    </a>
                </div>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
{% endblock %}