{% extends 'base-back.html.twig' %}
{% block title %}Edit Subscription{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        input.form-control {
            border: none;
            border-bottom: 1px solid #ccc;
            box-shadow: none;
            border-radius: 0;
        }
    </style>
{% endblock %}
{% block body %}
    {{ parent() }}
    <style>
        .form-group {
            margin-bottom: 15px;
            width: 700px; /* Adjust as needed */
            height: 60px; /* Adjust as needed */
        }

        .btn {
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }
    </style>

    <div class="card" style="width: 50rem; margin-left: 500px; margin-top: 100px">
        <div class="card-body">
            <h5 class="card-title">Edit Subscription</h5>
            <form method="post">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.type) }}
                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.price) }}
                    {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
                <a href="{{ path('app_subscription_index') }}" class="btn btn-secondary">Back to List</a>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
{% endblock %}
