{% extends 'base-back.html.twig' %}

{% block title %}Subscription{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="card" style="width: 50rem; margin-left: 500px; margin-top: 100px">
        <div class="card-body">
            <h5 class="card-title">Subscriptions</h5>
            <table class="table align-items-center">
                <thead>
                <tr style="text-align: center">
                    <th>Name</th>
                    <th>Type</th>
                    <th>Price</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for subscription in subscriptions %}
                    <tr style="text-align: center">
                        <td>{{ subscription.name }}</td>
                        <td>{{ subscription.type }}</td>
                        <td>{{ subscription.price }}</td>
                        <td>
                            <a href="{{ path('app_subscription_show', {'id': subscription.id}) }}">show</a>
                            <a href="{{ path('app_subscription_edit', {'id': subscription.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <a href="{{ path('app_subscription_new') }}" class="btn btn-primary">Create new</a>
        </div>
    </div>
{% endblock %}
