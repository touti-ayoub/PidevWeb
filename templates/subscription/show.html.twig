{% extends 'base-back.html.twig' %}

{% block title %}Subscription{% endblock %}
{% block stylesheets %}
    {{ parent() }}

{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="card" style="width: 50rem; margin-left: 500px; margin-top: 100px">
        <div class="card-body" style="display: flex; flex-direction: column; align-items: center;">
            <h5 class="card-title">Subscriptions</h5>
            <table class="table">
                <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ subscription.name }}</td>
                </tr>
                <tr>
                    <th>Type</th>
                    <td>{{ subscription.type }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ subscription.price }}</td>
                </tr>
                </tbody>
            </table>

            <br>
            <div style="display: flex; justify-content: space-between; width: 120px;">
                <a href="{{ path('app_subscription_index') }}">
                    <img src="{{ asset('back-office/img/back.png') }}" alt="Back to list" style="width: 40px; height: 40px;">
                </a>
                <a href="{{ path('app_subscription_edit', {'id': subscription.id}) }}">
                    <img src="{{ asset('back-office/img/edit.png') }}" alt="Edit" style="margin-left: 15px; margin-right: 15px; width: 40px; height: 40px;">
                </a>
                {{ include('subscription/_delete_form.html.twig', {'icon': true}) }}
            </div>
        </div>
    </div>
{% endblock %}