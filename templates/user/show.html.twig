{% extends 'base-back.html.twig' %}

{% block title %}Subscription{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block body %}
    {{ parent() }}
<div class="card" style="width: 50rem; margin-left: 500px; margin-top: 100px">
    <div class="card-body">
        <h5 class="card-title">Subscriptions</h5>
    <table class="table">
        <tbody>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}" class="btn btn-primary">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">edit</a>

    {{ include('user/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}